<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>View Page</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background-color: #f8f9fa;
        }
        .table-container {
            margin-top: 50px;
            padding: 30px;
            background-color: white;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            transition: transform 0.3s;
        }
        .table-container:hover {
            transform: scale(1.01);
        }
        tr:hover {
            background-color: #f2f2f2;
            transition: 0.3s;
        }
        .btn:hover {
            transform: scale(1.05);
            transition: 0.2s ease;
        }
    </style>
</head>
<body>
    <div class="container table-container text-center">
        <h1 class="mb-4">View Page</h1>
        <table class="table table-bordered table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Password</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% todolist.map((val) => { %>
                    <tr>
                        <td><%= val.id %></td>
                        <td><%= val.name %></td>
                        <td><%= val.email %></td>
                        <td><%= val.password %></td>
                        <td>
                            <a href="/edituser?editid=<%= val.id %>" class="btn btn-warning btn-sm me-2">Edit</a>
                            <a href="/deleteuser?deleteid=<%= val.id %>" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
        <hr>
        <a href="/add" class="btn btn-success mt-2">Add User</a>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
