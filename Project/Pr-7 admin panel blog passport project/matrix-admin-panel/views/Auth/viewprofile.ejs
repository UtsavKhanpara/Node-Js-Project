<%- include('../header') %>

<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card border-0 shadow-lg rounded-4 overflow-hidden profile-wrapper">

        <!-- Profile Header -->
        <div class="d-flex align-items-center bg-dark text-white p-4">
          <img src="<%= admin.profile %>" alt="Profile Picture"
            class="rounded-circle border border-3 border-white shadow me-4 profile-img"
            width="120" height="120">
          <div>
            <h3 style="margin-left: 50px;" class="fw-bold mb-1"><%= admin.name %></h3>
            <p style="margin-left: 50px;" class="mb-0 opacity-75"><%= admin.email %></p>
          </div>
        </div>

        <!-- Profile Details -->
        <div class="row g-0">
          <!-- Sidebar -->
          <div class="col-md-4 bg-light p-4 border-end sidebar-section">
            <h6 class="fw-bold text-uppercase mb-3">Quick Info</h6>
            <ul class="list-unstyled mb-0">
              <li class="py-2 px-3 mb-2 rounded-3 shadow-sm detail-hover">üèô City: <span class="fw-bold"><%= admin.city %></span></li>
              <li class="py-2 px-3 mb-2 rounded-3 shadow-sm detail-hover">‚öß Gender: <span class="fw-bold"><%= admin.gender %></span></li>
              <li class="py-2 px-3 rounded-3 shadow-sm detail-hover">üéì Qualification: <span class="fw-bold"><%= admin.qualification %></span></li>
            </ul>
          </div>

          <!-- Main Content -->
          <div class="col-md-8 p-5 main-section">
            <h4 class="fw-bold mb-4">üë§ Profile Overview</h4>
            <p class="text-muted">This is your profile dashboard. You can view your basic information, check your qualification details and manage your account settings here.</p>
            
            
          </div>
        </div>

      </div>
    </div>
  </div>
</div>

<style>
/* Profile Image Hover */
.profile-img {
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}
.profile-img:hover {
  transform: rotate(-3deg) scale(1.05);
  box-shadow: 0 10px 25px rgba(0,0,0,0.4);
}

/* Sidebar Hover */
.detail-hover {
  background: #fff;
  transition: all 0.3s ease;
}
.detail-hover:hover {
  background: #eef4ff;
  transform: translateX(5px);
}

/* Card Hover */
.profile-wrapper {
  transition: transform 0.4s ease, box-shadow 0.4s ease;
}
.profile-wrapper:hover {
  transform: scale(1.01);
  box-shadow: 0 15px 30px rgba(0,0,0,0.25);
}

/* Button Animation */
.action-btn {
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}
.action-btn:hover {
  transform: translateY(-3px);
  box-shadow: 0 5px 15px rgba(0,0,0,0.2);
}

/* Sidebar */
.sidebar-section {
  animation: fadeInLeft 0.8s ease;
}

/* Main Section */
.main-section {
  animation: fadeInRight 0.8s ease;
}

/* Animations */
@keyframes fadeInLeft {
  from {opacity: 0; transform: translateX(-40px);}
  to {opacity: 1; transform: translateX(0);}
}
@keyframes fadeInRight {
  from {opacity: 0; transform: translateX(40px);}
  to {opacity: 1; transform: translateX(0);}
}
</style>

<%- include('../footer') %>
