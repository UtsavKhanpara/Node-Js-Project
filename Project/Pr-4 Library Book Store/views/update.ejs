<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>Edit Book</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    body {
      font-family: 'Segoe UI', sans-serif;
      background: linear-gradient(135deg, #f9f9f9, #e9ecef);
      min-height: 100vh;
    }

    /* Sidebar */
    .sidebar {
      height: 100vh;
      position: fixed;
      top: 0;
      left: 0;
      width: 220px;
      background: #212529;
      padding: 20px 10px;
      color: #fff;
      box-shadow: 2px 0 10px rgba(0, 0, 0, 0.1);
    }

    .sidebar .nav-link {
      color: #fff;
      margin: 10px 0;
      font-size: 15px;
      padding: 8px 12px;
      border-radius: 6px;
      transition: all 0.3s ease;
    }

    .sidebar .nav-link:hover {
      background: #495057;
      transform: translateX(5px);
    }

    /* Content */
    .content {
      margin-left: 240px;
      padding: 30px;
    }

    /* Card */
    .card {
      border-radius: 15px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
      transition: all 0.3s ease;
    }

    .card:hover {
      transform: translateY(-3px);
      box-shadow: 0 6px 25px rgba(0, 0, 0, 0.15);
    }

    /* Form fields */
    .form-control,
    .form-select {
      border-radius: 8px;
      padding: 10px 12px;
      border: 1px solid #ced4da;
      transition: all 0.3s ease;
    }

    .form-control:focus,
    .form-select:focus {
      border-color: #0d6efd;
      box-shadow: 0 0 8px rgba(13, 110, 253, 0.3);
    }

    /* Labels */
    .form-label {
      font-weight: 600;
      margin-bottom: 6px;
      color: #333;
    }

    /* Buttons */
    .btn-primary {
      background: linear-gradient(135deg, #0d6efd, #0a58ca);
      border: none;
      border-radius: 8px;
      padding: 10px 20px;
      font-weight: 600;
      transition: all 0.3s ease;
    }

    .btn-primary:hover {
      background: linear-gradient(135deg, #0a58ca, #084298);
      transform: scale(1.05);
      box-shadow: 0 4px 12px rgba(13, 110, 253, 0.4);
    }

    /* Image preview */
    img.rounded {
      border: 2px solid #ddd;
      padding: 3px;
      transition: transform 0.3s ease;
    }

    img.rounded:hover {
      transform: scale(1.1);
    }

    /* Heading */
    h2 {
      font-weight: bold;
      color: #0d6efd;
      margin-bottom: 20px;
      text-shadow: 1px 1px 2px rgba(13, 110, 253, 0.2);
      animation: fadeInDown 0.6s ease;
    }

    /* Animations */
    @keyframes fadeInDown {
      from {
        opacity: 0;
        transform: translateY(-20px);
      }

      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
  </style>
</head>

<body>
  <!-- Sidebar -->
  <div class="sidebar">
    <%- include("sidebar") %>
  </div>

  <!-- Content -->
  <div class="content">
    <div class="card p-4">
      <h2>Edit Book</h2>
      <form action="/updateBook/<%= singleBook._id %>" method="POST" enctype="multipart/form-data">
        
        <!-- Book Image -->
        <div class="mb-3">
          <label class="form-label">Book Image</label>
          <input type="file" name="profile" class="form-control">
          <% if (singleBook.profile) { %>
            <img src="/uploads/<%= singleBook.profile %>" width="90" class="mt-2 rounded">
          <% } %>
        </div>

        <!-- Title -->
        <div class="mb-3">
          <label class="form-label">Book Title</label>
          <input type="text" name="title" class="form-control" value="<%= singleBook.title %>" required>
        </div>

        <!-- Author -->
        <div class="mb-3">
          <label class="form-label">Author</label>
          <input type="text" name="author" class="form-control" value="<%= singleBook.author %>" required>
        </div>

        <!-- ISBN -->
        <div class="mb-3">
          <label class="form-label">ISBN</label>
          <input type="text" name="isbn" class="form-control" value="<%= singleBook.isbn %>" readonly>
        </div>

        <!-- Genre -->
        <div class="mb-3">
          <label class="form-label">Genre</label>
          <select name="genre" class="form-select" required>
            <option <%= singleBook.genre==="Fiction" ?"selected":"" %>>Fiction</option>
            <option <%= singleBook.genre==="Classic" ?"selected":"" %>>Classic</option>
            <option <%= singleBook.genre==="Romance" ?"selected":"" %>>Romance</option>
            <option <%= singleBook.genre==="Fantasy" ?"selected":"" %>>Fantasy</option>
            <option <%= singleBook.genre==="Dystopian" ?"selected":"" %>>Dystopian</option>
          </select>
        </div>

        <!-- Total Books -->
        <div class="mb-3">
          <label class="form-label">Total Books</label>
          <input type="number" name="totalBooks" class="form-control" value="<%= singleBook.totalBooks %>" required>
        </div>

        <button type="submit" class="btn btn-primary">Update Book</button>
      </form>
    </div>
  </div>
</body>

</html>
